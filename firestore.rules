rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isSystemAdmin() {
      return isSignedIn() && request.auth.token.email == 'thuliocosta8@gmail.com';
    }

    function isBusinessOwner(businessId) {
      return isSignedIn() && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // System admin can read/write any user profile.
      // A user can read and update their own profile.
      allow read, update: if isSystemAdmin() || isOwner(userId);
      
      // Allow a new user to create their own profile document.
      allow create: if isSignedIn();
    }
    
    // Rules for 'businesses' and all its subcollections
    match /businesses/{businessId}/{document=**} {
      // ANYONE can read business details and all sub-collection data for public booking pages.
      allow read: if true;
      
      // Only the business owner or a system admin can write to the business or its subcollections.
      allow write: if isSystemAdmin() || isBusinessOwner(businessId);
    }
  }
}
