rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isSystemAdmin() {
      // The user with this email has system-wide admin privileges.
      return isSignedIn() && request.auth.token.email == 'thuliocosta8@gmail.com';
    }

    function isBusinessOwner(businessId) {
      // Check if the user is the owner of the specified business.
      return isSignedIn() && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // System admin can read/write any user profile.
      // A user can read and update their own profile.
      allow read, update: if isSystemAdmin() || isOwner(userId);
      
      // Allow a new user to create their own profile document.
      allow create: if isSignedIn();
    }
    
    // Rules for 'businesses' and its subcollections
    match /businesses/{businessId} {
      // ANYONE can read business details for the public booking page.
      allow read: if true;
      
      // Only admin or the owner can write.
      allow write: if isSystemAdmin() || isBusinessOwner(businessId);

      // Rules for 'services' subcollection
      match /services/{serviceId} {
        // ANYONE can read service details.
        allow read: if true;
        // Only admin or the owner can write services.
        allow write: if isSystemAdmin() || isBusinessOwner(businessId);
      }
      
      // Rules for 'schedules' subcollection
      match /schedules/{scheduleId} {
        // ANYONE can read schedule details.
        allow read: if true;
        // Only admin or the owner can write schedules.
        allow write: if isSystemAdmin() || isBusinessOwner(businessId);
      }

      // Rules for 'appointments' subcollection
      match /appointments/{appointmentId} {
        // Only admin or business owner can manage appointments.
        // Clients can create appointments (this will be refined).
        allow read, write: if isSystemAdmin() || isBusinessOwner(businessId);
        allow create: if isSignedIn(); // Allow any signed-in user to create an appointment
      }
      
      match /settings/{settingId} {
        allow read, write: if isSystemAdmin() || isBusinessOwner(businessId);
      }
    }
    
    // Allow admin to list users and businesses
    match /users/{document=**} {
      allow list: if isSystemAdmin();
    }
    match /businesses/{document=**} {
      allow list: if isSystemAdmin();
    }

    // Fallback rule: Deny all other reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
