rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isSystemAdmin() {
      return isSignedIn() && request.auth.token.email == 'thuliocosta8@gmail.com';
    }

    function isBusinessOwner(businessId) {
      return isSignedIn() && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // System admin can read/write any user profile.
      // A user can read and update their own profile.
      allow read, update: if isSystemAdmin() || isOwner(userId);
      
      // Allow a new user to create their own profile document.
      allow create: if isSignedIn();
    }
    
    // Rules for 'businesses' and its subcollections
    match /businesses/{businessId} {
      // ANYONE can read business details for the public booking page.
      allow read: if true;
      
      // Only admin or the owner can write.
      allow write: if isSystemAdmin() || isBusinessOwner(businessId);

      // Subcollections are publicly readable but writable only by the owner/admin.
      match /{allSubcollections}/{docId} {
        allow read: if true;
        allow write: if isSystemAdmin() || isBusinessOwner(businessId);
      }

      // Specific rule for appointments: any signed-in user can create one.
      match /appointments/{appointmentId} {
        allow create: if isSignedIn();
        // Read/update/delete still restricted to owner/admin
        allow read, update, delete: if isSystemAdmin() || isBusinessOwner(businessId);
      }
    }
  }
}
